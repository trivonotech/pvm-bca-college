rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. User Management (Modified for Restore to work)
    // Allows Admin (Auth) to write ANY user document (needed for migration)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // 2. Special Public Collections
    match /analytics/{docId} {
      allow read: if true;
      allow update: if true; // Public view counting
      allow create: if true;
    }

    match /system_logs/{logId} {
      allow create: if true; // Public error reporting
      allow read, delete: if request.auth != null;
    }
    
    match /contacts/{contactId} {
      allow create: if true; // Contact form
      allow read, delete: if request.auth != null;
    }

    match /inquiries/{docId} {
       allow create: if true;
       allow read, delete: if request.auth != null;
    }
    
    match /subscribers/{docId} {
       allow create: if true;
       allow read, delete: if request.auth != null;
    }

    // 3. Catch-All for Content (Events, Pages, etc.)
    // Public Read, Admin Write
    match /{collection}/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
